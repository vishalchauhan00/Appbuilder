<?xml version="1.0" encoding="utf-8"?>
<item targetClass="Popover" mockup="" visible="true" visibleInTableView="true" imagePath="assets/toolbox/ico_dialog.png" description="Here is the label description"
		>
	<properties>
		<type name="Type" @stopCommit="true">
			<property path="name" input="spark.components.TextInput">
				<validations>
					<validation validator="UniqUINameValidator">
						<args>
							<arg property="currentSettings" value="{@currentSettings:}"/>
							<arg property="pageContainerDic" value="{@page:}"/>
							<arg property="uiPartDic" value="{@base:}"/>
							<arg property="tableViewCellDic" value="{@tableviewCell:}"/>
							<arg property="toolbarUiDic" value="{@toolbarUiDic:}"/>
						</args>
					</validation>
				</validations>
			</property>
			<property path="showPointer" dataType="Boolean" input="spark.components.CheckBox" value="0"/>
			<property path="hidden" dataType="Boolean" input="spark.components.CheckBox" value="1" disable="true"/>
		</type>
		<type name="Style" @stopCommit="true">
			<property path="backgroundColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="backgroundColor.alpha" input="spark.components.NumericStepper" min="0.0" max="1.0" inc="0.1" copyable="true"/>
			<property path="borderWeight" dataType="Number" input="spark.components.NumericStepper" min="0" max="10" inc="1" init="0" copyable="true"/>
			<property path="borderColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="borderColor.alpha" input="spark.components.NumericStepper" min="0.0" max="1.0" inc="0.1" copyable="true"/>
			<property path="cornerRadius" dataType="Number" input="spark.components.NumericStepper" min="0" max="25" inc="1" init="0" copyable="true"/>
		</type>		
		<type name="Content">
			<property path="type" input="spark.components.DropDownList" dataType="array" init="Menu" copyable="true"> 
				<dataSource>
					<data name="Menu" />
					<data name="Custom" />
				</dataSource>
				<dependentActions>
					<when condition="compare" compareTarget="{@form[type]:value}" compareBy="EQ" compareWith="Menu" at="initForm, postCommit">
						<action target="{@form[showDivider]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[mouseoverTintColor]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[mouseoverTextColor]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems[*].id]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems[*].text]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems[*].lineBreak]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems[*].height]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[menuItems[*].actions.clicked]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.fontName]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.fontSize]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.fontWeight]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.fontStyle]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.textColor]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[font.textAlignment]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[underline]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[strikeout]:}" method="folded" value="false" caseOf="true"/>

						<action target="{@form[showDivider]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems[*].id]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems[*].text]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems[*].lineBreak]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems[*].height]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[menuItems[*].actions.clicked]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.fontName]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.fontSize]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.fontWeight]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.fontStyle]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.textColor]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[font.textAlignment]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[underline]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[strikeout]:}" method="folded" value="true" caseOf="false"/>
					</when>
					<when condition="compare" compareTarget="{@form[type]:value}" compareBy="EQ" compareWith="Custom" at="initForm, postCommit">
						<action target="{@form[dataarray[0].Fields]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[dataarray[0].Fields]:}" method="folded" value="true" caseOf="false"/>
					</when>
			    </dependentActions>
			</property>
			<property path="showDivider" dataType="Boolean" input="spark.components.CheckBox" value="true" copyable="true"/>	
			<property path="mouseoverTintColor" input="mx.controls.ColorPicker" disable="true"/> 
			<property path="mouseoverTextColor" input="mx.controls.ColorPicker" disable="true" />
			<property formKey="menuItems" path="menuItems" input="spark.components.List" labelField="text" limit="10" copyable="true"/>
			<property path="menuItems[*].id" dataType="Number" input="spark.components.NumericStepper" min="0" max="15" copyable="true"/>
			<property path="menuItems[*].text" input="spark.components.TextInput"/>
			<property path="menuItems[*].lineBreak" dataType="Boolean" input="spark.components.CheckBox" value="true" disable="true"/>	
			<property path="menuItems[*].height" dataType="Number" input="spark.components.NumericStepper" min="20" max="56" disable="true"/>			
			<property path="menuItems[*].actions.clicked" input="LabelWithButton"/>
			<property formKey="dataarray[0].Fields" path="dataarray[0]" input="LabelWithButton" popup="CellEditor" source="Popover">
				<dependentActions>
					<when at="preCommit" stopCommit="true">
						<action target="{@form[dataarray[0].Fields]:}" method="{@base:notifyChange()}"/>
					</when>
				</dependentActions>
			</property>
		</type>
		<type name="TextFont" @stopCommit="true">
			<property path="font.fontName" input="spark.components.DropDownList" dataType="array" init="system" copyable="true">
				<dataSource source="{@base:getFontNames()}" />
			</property>
			<property path="font.fontSize" dataType="Number" input="spark.components.NumericStepper" min="6" max="100" inc="1" init="14" copyable="true">
			</property>
			<property path="font.fontWeight" dataType="Boolean" input="spark.components.CheckBox" value="false" disable="true"/>
			<property path="font.fontWeightNum" input="spark.components.DropDownList" dataType="Number" init="400" copyable="true">
				<dataSource>
					<data name="100" />
					<data name="200" />
					<data name="300" />
					<data name="400" />
					<data name="500" />
					<data name="600" />
					<data name="700" />
					<data name="800" />
					<data name="900" />
				</dataSource>
			</property>
			<property path="font.fontStyle" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true"/>
			<property path="underline" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true"/>
			<property path="strikeout" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true"/>
			<property path="font.textColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="font.textAlignment" dataType="custom" input="spark.components.RadioButton" init="left" copyable="true">
				<dataSource>
					<data name="left" path="left"/>
					<data name="center" path="center"/>
					<data name="right" path="right"/>
				</dataSource>
			</property>
		</type>
		<type name="Padding" @stopCommit="true">
			<property path="padding.top" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="2" copyable="true"/>
			<property path="padding.left" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="2" copyable="true"/>
			<property path="padding.right" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="2" copyable="true"/>
			<property path="padding.bottom" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="2" copyable="true"/>
		</type>
		<type name="Geometry" @stopCommit="true">
			<property path="frame.x" dataType="Number" input="spark.components.NumericStepper" min="0" max="0" disable="true"/>
			<property path="frame.y" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" disable="true"/>
			<property path="frame.width" dataType="Number" input="spark.components.NumericStepper" min="100" max="10000" init="200" copyable="true"/>
			<property path="frame.height" dataType="Number" input="spark.components.NumericStepper" min="40" max="10000" init="140" copyable="true"/>
		</type>
	</properties>
</item>
