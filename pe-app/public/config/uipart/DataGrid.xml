<?xml version="1.0" encoding="utf-8"?>
<item targetClass="DataGrid" mockup="" visible="true" visibleInTableView="false" imagePath="assets/toolbox/ico_datagrid.png" description=""
		>
	<properties>
		<type name="Type" @stopCommit="true">
			<property path="name" input="spark.components.TextInput">
				<validations>
					<validation validator="UniqUINameValidator">
						<args>
							<arg property="currentSettings" value="{@currentSettings:}"/>
							<arg property="pageContainerDic" value="{@page:}"/>
							<arg property="uiPartDic" value="{@base:}"/>
							<arg property="tableViewCellDic" value="{@tableviewCell:}"/>
							<arg property="toolbarUiDic" value="{@toolbarUiDic:}"/>
						</args>
					</validation>
				</validations>
			</property>
			<property path="gridlines" input="spark.components.DropDownList" init="Default">
				<dataSource>
					<data name="Default"/>
					<data name="Horizontal"/>			
				</dataSource>
			</property>
			<property path="hidden" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true"/>
			<property path="rowcountTargetUI" input="spark.components.DropDownList" init="">
				<dataSource source="@project:getSpecificTargetUIParts(@page)" labelField="uiname" valueField="uiname"/>
				<dependentActions>
					<when condition="compare" compareTarget="{@form[rowcountTargetUI]:value}" compareBy="EQ" compareWith="" at="initForm, postCommit">
						<action target="{@form[rowcountUIText]:}" method="folded" value="true" caseOf="true"/>
						<action target="{@form[rowcountUIText]:}" method="folded" value="false" caseOf="false"/>						
					</when>
				</dependentActions>
			</property>
			<property path="rowcountUIText" input="spark.components.TextInput"/>
			<property path="showPagination" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true" >
				<dependentActions>
					<when condition="compare" compareTarget="{@form[showPagination]:value}" compareBy="EQ" compareWith="1" at="initForm, postCommit">
						<action target="{@form[paginationColor]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[paginationColor]:}" method="folded" value="true" caseOf="false"/>						
					</when>
				</dependentActions>
			</property>
		</type>
		<type name="Style" @stopCommit="true">
			<property path="paginationColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="backgroundColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="backgroundColor.alpha" input="spark.components.NumericStepper" min="0.0" max="1.0" inc="0.1" copyable="true"/>
			<property path="borderColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="borderColor.alpha" input="spark.components.NumericStepper" min="0.0" max="1.0" inc="0.1" copyable="true"/>
			<property path="borderWeight" dataType="Number" input="spark.components.NumericStepper" min="0" max="10" inc="1" init="0" copyable="true"/>
			<property path="cornerRadius" dataType="Number" input="spark.components.NumericStepper" min="0" max="25" inc="1" init="0" copyable="true"/>
			<property path="boxShadow" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true">
				<dependentActions>
					<when condition="compare" compareTarget="{@form[boxShadow]:value}" compareBy="EQ" compareWith="1" at="initForm, postCommit">
						<action target="{@form[boxShadowWidth]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[boxShadowWidth]:}" method="folded" value="true" caseOf="false"/>
						<action target="{@form[boxShadowColor]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[boxShadowColor]:}" method="folded" value="true" caseOf="false"/>						
					</when>
				</dependentActions>
			</property>
			<property path="boxShadowWidth" input="spark.components.NumericStepper" min="0" max="10" inc="1" copyable="true"/>
			<property path="boxShadowColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
		</type>		
		<type name="TableDBSettings" @stopCommit="true">
			<property path="ServiceName" input="spark.components.DropDownList">
				<dataSource source="@project:getServices()" labelField="label" valueField="value"/>
				<dependentActions>
					<when at="initForm, postCommit" stopCommit="true">
						<action target="{@form[tablename]:}" method="setOptions" value="{@project:getDbTableDicsByServiceName(@form[ServiceName]:value)}" labelField="tablename" valueField="tablename"/>
						<action target="{@form[tablename]:}"  method="setProperty" property="selectedIndex" value="-1"/> 
						<action target="{@form[dataCols[*].fieldname]:}" method="setOptions" value="{@project:getBracedDbFields(@form[ServiceName]:value, @form[tablename]:value)}" labelField="fieldname" valueField="fieldname"/>
						<action target="{@form[selectallFieldname]:}" method="setOptions" value="{@project:getBracedDbFields(@form[ServiceName]:value, @form[tablename]:value)}" labelField="fieldname" valueField="fieldname"/>
					</when>
				</dependentActions>
			</property>
			<property path="tablename" input="spark.components.DropDownList">
				<dataSource source="@project:getDbTableDicsByServiceName(@form[ServiceName]:value)" labelField="tablename" valueField="tablename"/>
				<dependentActions>
					<when at="initForm, postCommit" condition="compare" compareTarget="{@form[tablename]:value}" compareBy="NE" compareWith="">
						<action target="{@form[dataCols[*].fieldname]:}"  method="setProperty" property="selectedIndex" value="-1"/> 						
						<action target="{@form[dataCols[*].fieldname]:}" method="setOptions" value="{@project:getBracedDbFields(@form[ServiceName]:value, @form[tablename]:value)}" labelField="fieldname" valueField="fieldname" caseOf="true"/>
						<action target="{@form[selectallFieldname]:}" method="setOptions" value="{@project:getBracedDbFields(@form[ServiceName]:value, @form[tablename]:value)}" labelField="fieldname" valueField="fieldname" caseOf="true"/>
					</when>
				</dependentActions>
			</property>
			<property path="where" input="spark.components.TextInput" validator="whereClauseValidator"/>
			<property path="sort" input="spark.components.TextInput"/>
			<property path="limit" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="0"/>
		</type>
		<type name="TableItems">
			<property path="freezeCols" input="spark.components.NumericStepper" min="0" max="10" inc="1" init="0" disable="true"/>
			<property path="checkboxSelection" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true">
				<dependentActions>
					<when condition="compare" compareTarget="{@form[checkboxSelection]:value}" compareBy="EQ" compareWith="0" at="initForm, postCommit">
						<action target="{@form[selectallValue]:}" method="hide" value="false" caseOf="true"/>
						<action target="{@form[selectallValue]:}" method="hide" value="true" caseOf="false"/>
						<action target="{@form[selectallFieldname]:}" method="hide" value="false" caseOf="true"/>
						<action target="{@form[selectallFieldname]:}" method="hide" value="true" caseOf="false"/>
					</when>
				</dependentActions>
			</property>
			<property path="selectallValue" dataType="String" input="spark.components.TextInput" maxlength="50" copyable="true"/>
			<property path="selectallFieldname" input="spark.components.DropDownList" copyable="true"/>			
			<property formKey="dataCols" path="dataCols" input="spark.components.List" labelField="fieldname" copyable="true"/>
			<property path="dataCols[*].isInclude" dataType="Boolean" input="spark.components.CheckBox" value="1" copyable="true"/>
			<property path="dataCols[*].fieldname" input="spark.components.DropDownList" copyable="true">
				<dependentActions>
					<when at="initForm, postCommit">
						<action target="{@form[dataCols[*].fieldname]:}" method="setOptions" value="{@project:getBracedDbFields(@form[ServiceName]:value, @form[tablename]:value)}" labelField="fieldname" valueField="fieldname"/>
					</when>
				</dependentActions>						
			</property>
			<property path="dataCols[*].id" dataType="Number" input="spark.components.NumericStepper" min="0" max="9" copyable="true"/>
			<property path="dataCols[*].heading" input="spark.components.TextInput" copyable="true"/>
			<property path="dataCols[*].width" dataType="Number" input="spark.components.NumericStepper" min="4" max="1000" inc="1" init="100" copyable="true"/>
			<property path="dataCols[*].isCustom" dataType="Boolean" input="spark.components.CheckBox" value="0" copyable="true">		
			</property>
			<property formKey="dataCols[*].Fields" path="dataCols[*]" input="LabelWithButton" popup="CellEditor" source="DataGrid" fieldname="Fields">
				<dependentActions>
					<when at="preCommit" stopCommit="true">
						<action target="{@form[dataCols[*].Fields]:}" method="{@base:notifyChange()}"/>
					</when>
				</dependentActions>
			</property>
			<property path="dataCols[*].isCustomHeader" dataType="Boolean" input="spark.components.CheckBox" value="0" copyable="true">		
			</property>
			<property formKey="dataCols[*].headerFields" path="dataCols[*]" input="LabelWithButton" popup="CellEditor" source="DataGrid" fieldname="headerFields">
			</property>
			<property path="dataCols[*].isSearchable" dataType="Boolean" input="spark.components.CheckBox" value="0" copyable="true"/>
			<property path="dataCols[*].isSortable" dataType="Boolean" input="spark.components.CheckBox" value="0" disable="true"/>
			<property path="dataCols[*].isCollapsible" dataType="Boolean" input="spark.components.CheckBox" value="0" disable="true"/>
		</type>
		<type name="TableHeader" @stopCommit="true">
			<property path="showheader" dataType="Boolean" input="spark.components.CheckBox" value="1" copyable="true">
			 	<dependentActions>
			        <when condition="compare" compareTarget="{@form[showheader]:value}" compareBy="EQ" compareWith="0" at="initForm, postCommit">
			            <action target="{@form[stickyheader]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[stickyheader]:}" method="folded" value="false" caseOf="false"/>
		            	<action target="{@form[headerheight]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerheight]:}" method="folded" value="false" caseOf="false"/>
		            	<action target="{@form[headerBGColor]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerBGColor]:}" method="folded" value="false" caseOf="false"/>
						<action target="{@form[headerfont.textColor]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerfont.textColor]:}" method="folded" value="false" caseOf="false"/>
		            	<action target="{@form[headerfont.fontSize]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerfont.fontSize]:}" method="folded" value="false" caseOf="false"/>
		            	<action target="{@form[headerfont.fontWeight]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerfont.fontWeight]:}" method="folded" value="false" caseOf="false"/>
						<action target="{@form[headerfont.textAlignment]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[headerfont.textAlignment]:}" method="folded" value="false" caseOf="false"/>
			        </when>
			    </dependentActions>
			</property>
			<property path="stickyheader" dataType="Boolean" input="spark.components.CheckBox" value="0" copyable="true"/>
			<property path="headerheight" input="spark.components.NumericStepper" min="20" max="100" inc="1" init="40" copyable="true"/>
			<property path="headerBGColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="headerfont.textColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="headerfont.fontName" input="spark.components.DropDownList" dataType="array" init="system" copyable="true">
				<dataSource source="{@base:getFontNames()}" />
			</property>
			<property path="headerfont.fontSize" dataType="Number" input="spark.components.NumericStepper" min="12" max="30" inc="1" init="16" copyable="true"/>
			<property path="headerfont.fontWeight" dataType="Boolean" input="spark.components.CheckBox" value="1" disable="true"/>
			<property path="headerfont.fontWeightNum" input="spark.components.DropDownList" dataType="Number" init="400" copyable="true">
				<dataSource>
					<data name="100" />
					<data name="200" />
					<data name="300" />
					<data name="400" />
					<data name="500" />
					<data name="600" />
					<data name="700" />
					<data name="800" />
					<data name="900" />
				</dataSource>
			</property>
			<property path="headerfont.textAlignment" dataType="custom" input="spark.components.RadioButton" init="left" copyable="true">
				<dataSource>
					<data name="left" path="left"/>
					<data name="center" path="center"/>
					<data name="right" path="right"/>
				</dataSource>
			</property>
		</type>
		<type name="TableRows" @stopCommit="true">
			<property path="rowcount" dataType="Number" input="spark.components.NumericStepper" min="1" max="25" inc="1" init="2" copyable="true"/>
			<property path="rowheight" dataType="Number" input="spark.components.NumericStepper" min="15" max="1000" inc="1" init="30" copyable="true"/>
			<property path="alternatingRowStyle" dataType="Boolean" input="spark.components.CheckBox" value="1" copyable="true">
			 	<dependentActions>
			        <when condition="compare" compareTarget="{@form[alternatingRowStyle]:value}" compareBy="EQ" compareWith="0" at="initForm, postCommit">
			            <action target="{@form[alternatingRowColors]:}" method="folded" value="true" caseOf="true"/>
		            	<action target="{@form[alternatingRowColors]:}" method="folded" value="false" caseOf="false"/>
			        </when>
			    </dependentActions>
			</property>
			<property path="alternatingRowColors" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="rowhoverColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="rowfont.textColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="rowfont.fontName" input="spark.components.DropDownList" dataType="array" init="system" copyable="true">
				<dataSource source="{@base:getFontNames()}" />
			</property>
			<property path="rowfont.fontSize" dataType="Number" input="spark.components.NumericStepper" min="12" max="30" inc="1" init="16" copyable="true"/>
			<property path="rowfont.fontWeightNum" input="spark.components.DropDownList" dataType="Number" init="400" copyable="true">
				<dataSource>
					<data name="100" />
					<data name="200" />
					<data name="300" />
					<data name="400" />
					<data name="500" />
					<data name="600" />
					<data name="700" />
					<data name="800" />
					<data name="900" />
				</dataSource>
			</property>
			<property path="rowfont.textAlignment" dataType="custom" input="spark.components.RadioButton" init="left" copyable="true">
				<dataSource>
					<data name="left" path="left"/>
					<data name="center" path="center"/>
					<data name="right" path="right"/>
				</dataSource>
			</property>
		</type>
		<type name="Actions">
			<property path="actions.onCellClick" input="LabelWithButton" />			
	    </type>
		<type name="Padding" @stopCommit="true">
			<property path="padding.top" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="0" copyable="true"/>
			<property path="padding.left" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="0" copyable="true"/>
			<property path="padding.right" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="0" copyable="true"/>
			<property path="padding.bottom" dataType="Number" input="spark.components.NumericStepper" min="0" max="100" inc="1" init="0" copyable="true"/>
		</type>
		<type name="Geometry" @stopCommit="true">
			<property path="frame.x" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
			<property path="frame.y" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
			<property path="frame.width" dataType="Number" input="spark.components.NumericStepper" min="50" max="10000" init="350" copyable="true"/>
			<property path="frame.height" dataType="Number" input="spark.components.NumericStepper" min="10" max="10000" init="100" copyable="true"/>
		</type> 
	</properties>
</item>
