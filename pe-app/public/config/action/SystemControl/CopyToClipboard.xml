<?xml version="1.0" encoding="utf-8"?>
<item targetClass="CopyToClipboard" category="SystemControlAction" type="SystemControl" method="CopyToClipboard"
		helpLink_EN="/" helpLink_JP="/">
	<properties>
		<type name="parameters" input="None">
			<property path="params.contenttype" input="spark.components.DropDownList" init="text" disable="true">
			  	<validations><validation validator="RequiredValueValidator"/></validations>
				<dataSource>
				 	<data name="text"/>
					<data name="image"/>
			  	</dataSource>
			</property>						
			<property path="params.targetUI" input="spark.components.DropDownList" fieldnameRequired="false">
				<validations><validation validator="RequiredValueValidator"/></validations>
				<dependentActions>
     				<when at="initForm">
     					<action target="{@form[params.targetUI]:}" method="setOptions" value="{@base:getSpecificTargetUIParts(@page:pageid, @form[base.currentSettings]:value)}" labelField="uiname" valueField="uiname"/>
     					<action target="{@form[params.targetUI]:}" method="setProperty" property="selectedIndex" value="-1"/>
						<action target="{@form[params.fieldname]:}" method="folded" value="true" caseOf="true" />
      				</when>
					<when condition="compare" compareTarget="{@base:getUIpartViewType(@form[params.targetUI]:value)}" compareBy="EQ" compareWith="DataGrid" at="initForm, postCommit">
						<action target="{@form[params.fieldname]:}" method="folded" value="false" caseOf="true" />
						<action target="{@form[params.fieldname]:}" method="folded" value="true" caseOf="false" />
						<action target="{@form[params.fieldname]:}" method="setOptions" value="{@base:getUIpartsDbFields(@form[params.targetUI]:value, @page:pageid, @form[base.currentSettings]:value)}" labelField="fieldname" valueField="fieldname" caseOf="true" />
					</when>
      			</dependentActions>
			</property>
			<property path="params.fieldname" input="spark.components.ComboBox">
				<validations>
					<validation validator="RequiredValueValidator" />
				</validations>
			</property>
		</type>
				
		<type name="condition" input="HRule">
			<property path="params.condition" input="LabelWithButton"/>
		</type>
		<type name="resultEvents" input="HRule">
			<property path="actions.success" input="LabelWithButton"/>
			<property path="actions.error" input="LabelWithButton"/>
		</type>
	</properties>
</item>