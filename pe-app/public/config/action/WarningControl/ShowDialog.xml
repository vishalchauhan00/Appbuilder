<?xml version="1.0" encoding="utf-8"?>
<item targetClass="ShowDialog" category="AlertAction" type="Warning" method="ShowDialog"
	  helpLink_EN="" helpLink_JP="">
	<properties>
		
		<type name="parameters" input="None">	
			<property path="params.name" input="spark.components.DropDownList">
			    <validations><validation validator="RequiredValueValidator"/></validations>
				<dependentActions>
     				<when at="initForm">
     					<action target="{@form[params.name]:}" method="setOptions" value="{@base:getSpecificTargetUIParts(@page:pageid, @form[base.currentSettings]:value)}" labelField="uiname" valueField="uiname"/>
     					<action target="{@form[params.name]:}"  method="setProperty" property="selectedIndex" value="-1" caseOf="true"/>
						</when>
					<when at="initForm, postCommit" condition="compare" compareTarget="{@form[params.name]:value}" compareBy="NE" compareWith="">
						<action target="{@form[params.containers]:}" method="setOptions" value="{@project:getUIItemList(@page:pageid, @form[params.name]:value)}" caseOf="true"/>
      				</when>
      			</dependentActions>
			</property>
			<property path="params.containers" input="spark.components.DropDownList" />

			<property path="params.positionoverride" dataType="Boolean" input="spark.components.CheckBox" value="false" > 
				<dependentActions>
	 		        <when condition="compare" compareTarget="{@form[params.positionoverride]:value}" compareBy="EQ" compareWith="0" at="initForm, postCommit">
	 		        	<action target="{@form[params.padding.top]:}" method="folded" value="true" caseOf="true" />
						<action target="{@form[params.padding.top]:}" method="folded" value="false" caseOf="false" />
						<action target="{@form[params.padding.right]:}" method="folded" value="true" caseOf="true" />
						<action target="{@form[params.padding.right]:}" method="folded" value="false" caseOf="false" />
						<action target="{@form[params.padding.left]:}" method="folded" value="true" caseOf="true" />
						<action target="{@form[params.padding.left]:}" method="folded" value="false" caseOf="false" />
						<action target="{@form[params.padding.bottom]:}" method="folded" value="true" caseOf="true" />
						<action target="{@form[params.padding.bottom]:}" method="folded" value="false" caseOf="false" />
					</when>
			    </dependentActions>
			</property>
			<property path="params.padding.top" dataType="Number" input="spark.components.NumericStepper" min="1" max="1000" inc="1" init="10">
			</property>
			<property path="params.padding.right" dataType="Number" input="spark.components.NumericStepper" min="1" max="1000" inc="1" init="10">
			</property>
			<property path="params.padding.left" dataType="Number" input="spark.components.NumericStepper" min="1" max="1000" inc="1" init="10">
			</property>
			<property path="params.padding.bottom" dataType="Number" input="spark.components.NumericStepper" min="1" max="1000" inc="1" init="10">
			</property>
		</type>
				
		<type name="condition" input="HRule">
			<property path="params.condition" input="LabelWithButton"/>
		</type>
		<type name="resultEvents" input="HRule">
			<property path="actions.success" input="LabelWithButton"/>
			<property path="actions.error" input="LabelWithButton"/>
		</type>
		
	</properties>
</item>