{
  "item": {
    "meta": {
      "targetClass": "ToggleButton",
      "visible": true,
      "imagePath": "assets/toolbox/ico_toggle.png",
      "description": "Here is the ToggleButton description"
    },
    "types": {
      "General": {
        "properties": {
          "name": {
            "input": "TextInput",
            "validators": [
              "UniqUINameValidator"
            ]
          },
          "fieldname": {
            "input": "DropDownList123",
            "dataSource": [],
            "dependentActions": [
              {
                "condition": {
                  "type": "compare",
                  "target": "@dbTable:",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "initForm"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "true"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "false"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "setOptions",
                    "value": "@dbTable:fieldswithBracket",
                    "case": "false"
                  }
                ]
              },
              {
                "condition": {
                  "type": "compare",
                  "target": "{@form[fieldname]:value}",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "postCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[valueField]:}",
                    "method": "setValue",
                    "value": "{@form[fieldname]:value}",
                    "case": "false"
                  }
                ]
              }
            ]
          },
          "tooltip": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "on": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          },
          "normalTitle": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "selectedTitle": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "normalImage": {
            "input": "TextInputWithButton",
            "copyable": true
          },
          "selectedImage": {
            "input": "TextInputWithButton",
            "copyable": true
          },
          "valueField": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "hidden": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          }
        }
