{
  "item": {
    "meta": {
      "targetClass": "Segment",
      "visible": true,
      "imagePath": "assets/toolbox/ico_segment.png",
      "description": "Here is the label description"
    },
    "types": {
      "General": {
        "properties": {
          "name": {
            "input": "TextInput",
            "validators": [
              "UniqUINameValidator"
            ]
          },
          "segmentedControlStyle": {
            "input": "DropDownList",
            "dataType": "array",
            "init": "Plain",
            "copyable": true,
            "dataSource": [
              {
                "name": "Plain"
              },
              {
                "name": "Bezeled"
              }
            ]
          },
          "segmentInitialValue": {
            "input": "TextInput",
            "copyable": true,
            "validators": [
              "RequiredValueValidator"
            ]
          },
          "hidden": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          }
        }
      },
      "Style": {
        "properties": {
          "tintColor": {
            "input": "ColorPicker",
            "copyable": true
          },
          "borderColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          },
          "borderColor.alpha": {
            "input": "NumericStepper",
            "min": "0.0",
            "max": "1.0",
            "copyable": true
          },
          "segmentItems[0].font.textColor": {
            "input": "ColorPicker",
            "copyable": true
          }
        }
      },
      "Items": {
        "properties": {
          "segmentItems": {
            "input": "List",
            "copyable": true,
            "dependentActions": [
              {
                "condition": {
                  "at": [
                    "initForm",
                    " postIndexChange"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[segmentItems[*].type]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].type}"
                  },
                  {
                    "target": "{@form[segmentItems[*].type]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].type\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].imageDic]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].imageDic}"
                  },
                  {
                    "target": "{@form[segmentItems[*].imageDic]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].imageDic\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].text]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].text}"
                  },
                  {
                    "target": "{@form[segmentItems[*].text]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].text\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontName]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].font.fontName}"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontName]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].font.fontName\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontSize]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].font.fontSize}"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontSize]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].font.fontSize\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTintColor]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].onTapTintColor}"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTintColor]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].onTapTintColor\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTextColor]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].onTapTextColor}"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTextColor]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].onTapTextColor\"}"
                  },
                  {
                    "target": "{@form[segmentItems[*].actions.clicked]:}",
                    "method": "setValue",
                    "value": "{@base:segmentItems[@form[segmentItems]:selectedIndex].actions.clicked}"
                  },
                  {
                    "target": "{@form[segmentItems[*].actions.clicked]:}",
                    "method": "setPath",
                    "value": "{\"segmentItems[\" + @form[segmentItems]:selectedIndex + \"].actions.clicked\"}"
                  }
                ]
              }
            ]
          },
          "segmentItems[*].type": {
            "input": "DropDownList",
            "copyable": true,
            "dataSource": [
              {
                "name": "TextItem"
              },
              {
                "name": "ImageItem"
              }
            ],
            "dependentActions": [
              {
                "condition": {
                  "type": "compare",
                  "target": "{@form[segmentItems[*].type]:value}",
                  "compareBy": "EQ",
                  "compareWith": "TextItem",
                  "at": [
                    "initForm",
                    " postCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[segmentItems[*].imageDic]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].imageDic]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "false"
                  },
                  {
                    "target": "{@form[segmentItems[*].text]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].text]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontName]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontName]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontSize]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].font.fontSize]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTextColor]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTextColor]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTintColor]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[segmentItems[*].onTapTintColor]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  }
                ]
              }
            ]
          },
          "segmentItems[*].imageDic": {
            "input": "TextInputWithButton",
            "dataType": "ImageFileDic",
            "copyable": true
          },
          "segmentItems[*].text": {
            "input": "TextInput",
            "copyable": true
          },
          "segmentItems[*].font.fontName": {
            "input": "DropDownList",
            "dataType": "array",
            "init": "system",
            "copyable": true,
            "dataSource": []
          },
          "segmentItems[*].font.fontSize": {
            "input": "NumericStepper",
            "dataType": "Numeric",
            "init": "12",
            "min": "6",
            "max": "300",
            "copyable": true
          },
          "segmentItems[*].onTapTextColor": {
            "input": "ColorPicker"
          },
          "segmentItems[*].onTapTintColor": {
            "input": "ColorPicker"
          },
          "segmentItems[*].actions.clicked": {
            "input": "LabelWithButton"
          }
        }
      },
      "Geometry": {
        "properties": {
          "frame.x": {
            "input": "NumericStepper",
            "dataType": "Number",
            "min": "0",
            "max": "10000",
            "copyable": true
          },
          "frame.y": {
            "input": "NumericStepper",
            "dataType": "Number",
            "min": "0",
            "max": "10000",
            "copyable": true
          },
          "frame.width": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "88",
            "min": "10",
            "max": "10000",
            "copyable": true
          },
          "frame.height": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "44",
            "min": "5",
            "max": "10000",
            "copyable": true
          },
          "frame.rotation": {
            "input": "NumericStepper",
            "min": "0",
            "max": "360",
            "copyable": true
          }
        }
      }
    }
  }
}