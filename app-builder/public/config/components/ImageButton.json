{
  "item": {
    "meta": {
      "targetClass": "ImageButton",
      "visible": true,
      "imagePath": "assets/toolbox/ico_image.png",
      "description": "Here is the ImageButton description"
    },
    "types": {
      "General": {
        "properties": {
          "name": {
            "input": "TextInput",
            "validators": [
              "UniqUINameValidator"
            ]
          },
          "fieldname": {
            "input": "DropDownList123",
            "dataSource": [],
            "dependentActions": [
              {
                "condition": {
                  "type": "compare",
                  "target": "@dbTable:",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "initForm"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "true"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "false"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "setOptions",
                    "value": "@dbTable:fieldswithBracket",
                    "case": "false"
                  }
                ]
              },
              {
                "condition": {
                  "type": "compare",
                  "target": "{@form[fieldname]:value}",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "postCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[on]:}",
                    "method": "setValue",
                    "value": "{@form[fieldname]:value}",
                    "case": "false"
                  }
                ]
              }
            ]
          },
          "tooltip": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "normalImage": {
            "input": "TextInputWithButton",
            "dataType": "ImageFileDic",
            "copyable": true
          },
          "normalBackgroundImage": {
            "input": "TextInputWithButton",
            "dataType": "ImageFileDic",
            "init": "defaultImage.png",
            "copyable": true
          },
          "selectedImage": {
            "input": "TextInputWithButton",
            "dataType": "ImageFileDic",
            "copyable": true
          },
          "selectedBackgroundImage": {
            "input": "TextInputWithButton",
            "dataType": "ImageFileDic",
            "copyable": true
          },
          "scaleMode": {
            "input": "DropDownList",
            "copyable": true,
            "dataSource": [
              {
                "name": "ScaleToFill"
              },
              {
                "name": "AspectFit"
              }
            ]
          },
          "draggable": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          },
          "showElevation": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          },
          "enableRipple": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          },
          "hidden": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          }
        }
      },
      "Style": {
        "properties": {
          "borderWeight": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "0",
            "min": "0",
            "max": "10",
            "copyable": true
          },
          "borderColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          },
          "borderColor.alpha": {
            "input": "NumericStepper",
            "init": "0",
            "min": "0.0",
            "max": "1.0",
            "copyable": true
          }
        }
      },
      "Actions": {
        "properties": {
          "actions.clicked": {
            "input": "LabelWithButton"
          },
          "actions.flickRL": {
            "input": "LabelWithButton"
          },
          "actions.flickLR": {
            "input": "LabelWithButton"
          }
        }
      },
      "Geometry": {
        "properties": {
          "frame.x": {
            "input": "NumericStepper",
            "dataType": "Number",
            "min": "0",
            "max": "10000",
            "copyable": true
          },
          "frame.y": {
            "input": "NumericStepper",
            "dataType": "Number",
            "min": "0",
            "max": "10000",
            "copyable": true
          },
          "frame.width": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "88",
            "min": "5",
            "max": "10000",
            "copyable": true
          },
          "frame.height": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "44",
            "min": "5",
            "max": "10000",
            "copyable": true
          },
          "frame.rotation": {
            "input": "NumericStepper",
            "min": "0",
            "max": "360",
            "copyable": true
          }
        }
      }
    }
  }
}