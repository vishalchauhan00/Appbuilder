{
  "item": {
    "meta": {
      "targetClass": "ScrollableView",
      "visible": true,
      "imagePath": "assets/toolbox/ico_dialog.png",
      "description": "Here is the label description"
    },
    "types": {
      "General": {
        "properties": {
          "name": {
            "input": "TextInput",
            "validators": [
              "UniqUINameValidator"
            ]
          },
          "scrollwidth": {
            "input": "NumericStepper",
            "init": "300",
            "min": "100",
            "max": "10000",
            "copyable": true
          },
          "scrollheight": {
            "input": "NumericStepper",
            "init": "200",
            "min": "100",
            "max": "10000",
            "copyable": true
          },
          "hidden": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "1",
            "copyable": true
          }
        }
      },
      "Style": {
        "properties": {
          "backgroundGradient": {
            "input": "TextInput",
            "dataType": "String"
          },
          "backgroundColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          },
          "backgroundColor.alpha": {
            "input": "NumericStepper",
            "min": "0.0",
            "max": "1.0",
            "copyable": true
          },
          "borderWeight": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "0",
            "min": "0",
            "max": "10",
            "copyable": true
          },
          "borderColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          },
          "borderColor.alpha": {
            "input": "NumericStepper",
            "min": "0.0",
            "max": "1.0",
            "copyable": true
          },
          "cornerRadius": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "0",
            "min": "0",
            "max": "25",
            "copyable": true
          },
          "boxShadow": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true,
            "dependentActions": [
              {
                "condition": {
                  "type": "compare",
                  "target": "{@form[boxShadow]:value}",
                  "compareBy": "EQ",
                  "compareWith": "1",
                  "at": [
                    "initForm",
                    " postCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[boxShadowWidth]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[boxShadowWidth]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  },
                  {
                    "target": "{@form[boxShadowColor]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "true"
                  },
                  {
                    "target": "{@form[boxShadowColor]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "false"
                  }
                ]
              }
            ]
          },
          "boxShadowWidth": {
            "input": "NumericStepper",
            "min": "0",
            "max": "10",
            "copyable": true
          },
          "boxShadowColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          }
        }
      },
      "Content": {
        "properties": {
          "dataarray[0]": {
            "input": "LabelWithButton",
            "popup": "CellEditor",
            "source": "ScrollableView",
            "dependentActions": [
              {
                "condition": {
                  "at": [
                    "preCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[dataarray[0].Fields]:}",
                    "method": "{@base:notifyChange()}"
                  }
                ]
              }
            ]
          }
        }
      },
      "Padding": {
        "properties": {
          "padding.top": {
            "input": "NumericStepper",
