{
  "item": {
    "meta": {
      "targetClass": "Switch",
      "visible": true,
      "imagePath": "assets/toolbox/ico_switch.png",
      "description": "Here is the label description"
    },
    "types": {
      "General": {
        "properties": {
          "name": {
            "input": "TextInput",
            "validators": [
              "UniqUINameValidator"
            ]
          },
          "fieldname": {
            "input": "DropDownList123",
            "dataSource": [],
            "dependentActions": [
              {
                "condition": {
                  "type": "compare",
                  "target": "@dbTable:",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "initForm"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "true",
                    "case": "true"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "folded",
                    "value": "false",
                    "case": "false"
                  },
                  {
                    "target": "{@form[fieldname]:}",
                    "method": "setOptions",
                    "value": "@dbTable:fieldswithBracket",
                    "case": "false"
                  }
                ]
              },
              {
                "condition": {
                  "type": "compare",
                  "target": "{@form[fieldname]:value}",
                  "compareBy": "IS_NULL_OR_EMPTY",
                  "at": [
                    "postCommit"
                  ]
                },
                "actions": [
                  {
                    "target": "{@form[valueField]:}",
                    "method": "setValue",
                    "value": "{@form[fieldname]:value}",
                    "case": "false"
                  }
                ]
              }
            ]
          },
          "on": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "0",
            "copyable": true
          },
          "valueField": {
            "input": "TextInput",
            "dataType": "String",
            "copyable": true
          },
          "hidden": {
            "input": "CheckBox",
            "dataType": "Boolean",
            "value": "false",
            "copyable": true
          }
        }
      },
      "Style": {
        "properties": {
          "borderWeight": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "0",
            "min": "0",
            "max": "10",
            "copyable": true
          },
          "borderColor": {
            "input": "ColorPicker",
            "dataType": "ColorDic",
            "copyable": true
          },
          "borderColor.alpha": {
            "input": "NumericStepper",
            "min": "0.0",
            "max": "1.0",
            "copyable": true
          }
        }
      },
      "Actions": {
        "properties": {
          "actions.on": {
            "input": "LabelWithButton"
          },
          "actions.off": {
            "input": "LabelWithButton"
          },
          "actions.ValueChanged": {
