            "max": "10000",
            "copyable": true
          },
          "frame.y": {
            "input": "NumericStepper",
            "dataType": "Number",
            "min": "0",
            "max": "10000",
            "copyable": true
          },
          "frame.width": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "88",
            "min": "20",
            "max": "10000",
            "copyable": true
          },
          "frame.height": {
            "input": "NumericStepper",
            "dataType": "Number",
            "init": "44",
            "min": "10",
            "max": "10000",
            "copyable": true
          },
          "frame.rotation": {
            "input": "NumericStepper",
            "min": "0",
            "max": "360",
            "copyable": true
          }
        }
      }
