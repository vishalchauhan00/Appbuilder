<?xml version="1.0" encoding="utf-8"?>
<item targetClass="GenerateAccessToken" category="SystemControlAction" type="SystemControl" method="GenerateAccessToken"
		helpLink_EN="" helpLink_JP="">
	<properties>
		<type name="parameters" input="None">
			<property path="params.provider" dataType="array" input="spark.components.DropDownList">
		   		<validations><validation validator="RequiredValueValidator"/></validations>
		   		<dataSource>
		   			<data name="AAD"/>
					<data name="Google"/>
		  		</dataSource>
				<dependentActions>
 					<when at="initForm, postCommit" condition="compare" compareTarget="{@form[params.provider]:value}" compareBy="EQ" compareWith="AAD">	
						<action target="{@form[params.tenantid]:}" method="folded" value="false" caseOf="true"/>
						<action target="{@form[params.tenantid]:}" method="folded" value="true" caseOf="false"/>				
					</when>
 				</dependentActions>	
   			</property>
			<property path="params.tenantid" input="spark.components.TextInput">
				<validations><validation validator="RequiredValueValidator"/></validations>		   		
			</property>
			<property path="params.clientid" input="spark.components.TextInput">
				<validations><validation validator="RequiredValueValidator"/></validations>		   		
			</property>
			<property path="params.clientsecret" input="spark.components.TextInput">
				<validations><validation validator="RequiredValueValidator"/></validations>		   		
			</property>
			<property path="params.redirecturi" input="spark.components.TextInput" disable="true"/>
		</type>
		<type name="condition" input="HRule">
			<property path="params.condition" input="LabelWithButton"/>
		</type>
		<type name="resultEvents" input="HRule">
			<property path="actions.success" input="LabelWithButton"/>
			<property path="actions.error" input="LabelWithButton"/>
		</type>
	</properties>
</item>